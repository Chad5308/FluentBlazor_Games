@page "/Game"

<h3>Tic Tac Toe Board</h3>

<!-- Create a grid container with CSS Grid -->
<div style="display: grid; grid-template-columns: repeat(3, 100px); grid-gap: 10px;">
    @for (int row = 0; row < 3; row++)
    {
        @for (int col = 0; col < 3; col++)
        {
            int index = row * 3 + col;
            <FluentButton OnClick="@(() => OnCellClicked(index))" style="width: 100px; height: 100px; font-size: 2rem;">
                @board[index]
            </FluentButton>
        }
    }
</div>

@code {
    // Initialize the board with 9 cells (3x3 grid).
    private string[] board = new string[9];

    private void OnCellClicked(int index)
    {
        // Confirm that the index is valid and the cell is empty before marking it.
        if (index >= 0 && index < board.Length && string.IsNullOrWhiteSpace(board[index]))
        {
            board[index] = "❌";
        }
    }
}