@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<div role="status" style="padding-bottom: 1em;">
    Current count: <FluentBadge Appearance="Appearance.Neutral">@currentCount</FluentBadge>
</div>

<FluentButton Appearance="Appearance.Accent" @onclick="IncrementCount">Click me</FluentButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}

<h3>Tic-Tac-Toe</h3>
<fluent-card class="board">
    @for (int i = 0; i < 9; i++)
    {
        <fluent-button class="cell">@board[i]</fluent-button>
    }
</fluent-card>

<fluent-button class="reset">Restart</fluent-button>

<style>
    .board {
        display: grid;
        grid-template-columns: repeat(3, 80px);
        gap: 5px;
        padding: 16px;
        width: fit-content;
        margin-top: 20px;
    }

    .cell {
        width: 80px;
        height: 80px;
        font-size: 24px;
        text-align: center;
        vertical-align: middle;
        background: var(--neutral-fill-rest);
        cursor: pointer;
    }

        .cell:hover {
            background: var(--neutral-fill-hover);
        }

    .reset {
        margin-top: 10px;
        padding: 10px;
        font-size: 16px;
    }
</style>

@code {
    private string[] board = new string[9];
}
